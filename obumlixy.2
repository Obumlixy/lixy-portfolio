            list-style: none;
        }

        .categories-list li {
            padding: 10px 0;
            border-bottom: 1px solid var(--light-gray);
        }

        .categories-list li:last-child {
            border-bottom: none;
        }

        .categories-list a {
            color: var(--text);
            text-decoration: none;
            display: flex;
            justify-content: space-between;
            transition: color 0.3s;
