        /* Tags Widget */
        .tags {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .tag {
            background: var(--light-gray);
            color: var(--text);
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            text-decoration: none;
            transition: all 0.3s;
        }

        .tag:hover {
            background: var(--accent);
            color: white;
        }

        /* Newsletter Widget */
